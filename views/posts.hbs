<div class="row">
 <div class="col-md-12">
 <h2>Posts</h2>
 <hr />
 {{#if posts}}
 <div class="table-responsive">
 <table class="table">
   <thead>
    <tr>
        <th>Post ID</th>
        <th>Title</th>
        <th>Post Date</th>
        <th>Category</th>
        <th>Published</th>
    </tr>
   </thead>
    <tbody>
 {{#each posts}}
 <tr>
    <td>{{this.id}}</td>
    <td><a href="/posts?category={{this.category}}">{{this.title}}</a></td>
    <td>{{this.postDate}}</td>
    <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
    <td>{{this.published}}</td>
    <td>
        <div class="post-body">
            {{#safeHTML this.body}}{{/safeHTML}}
        </div>
    </td>
 </tr>
 {{/each}}

</tbody>
</table>
</div>

 {{else}}
 <p>No posts available</p>
 {{/if}}
 </div>
 {{#unless posts}}
 <div class="col-md-12 text-center">
 <strong>{{message}}</strong>
</div>
{{/unless}}
</div>














